{
  "name": "node-skeleton",
  "type": "module",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "bun": "bun",
    "dev": "bun run --hot src/index.ts",
    "build": "tsc --noEmit && npm run lint && swc src -d dist --delete-dir-on-start",
    "test": "jest",
    "lint": "eslint .",
    "apidoc": "apidoc -i src/ -o doc/api -c doc/apidoc.json"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.3",
    "dotenv": "^16.4.7",
    "hono": "^4.7.5",
    "loglevel": "^1.9.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.11.11",
    "@swc/jest": "^0.2.37",
    "@types/bun": "^1.2.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "apidoc": "^1.2.0",
    "bun": "^1.2.5",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1"
  }
}
